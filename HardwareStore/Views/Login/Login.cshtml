@{
    Layout = null;
    ViewData["title"] = "Inicio de Sesion";
}

@if (TempData["messageLogin"] != null)
{
    <div id="messageLogin" class="alert alert-primary" role="alert">
        @TempData["messageLogin"]
    </div>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        body {
            background-size: cover;
            background-position: center;
        }

        .card {
            background-color: #ddd;
            border-radius: 10px;
            width: 500px;
            height: 500px;
            opacity: 0.8;
            color: #000;
        }

        .input-group-text {
            background-color: #fff;
            color: #22f;
            border: none;
        }

        form {
            width: 90%;
        }

        .form-group label {
            font-weight: bold;
            color: #555;
        }

        .form-control {
            background-color: #fff;
            border: none;
        }

            .form-control::placeholder {
                color: #000;
            }

        .btn-primary {
            background-color: #22f;
            border: none;
        }

            .btn-primary:hover {
                background-color: #11f;
            }

        .forgot-password a {
            color: #ffffff;
        }

        @@keyframes slideOut {
            from {
                transform: translateY(0);
            }

            to {
                transform: translateY(-100%);
            }
        }

        .alert {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            padding: 10px;
            background-color: #f8d7da;
            color: #721c24;
            text-align: center;
            animation: slideIn 0.5s forwards, slideOut 0.5s forwards 3.5s;
            display: none;
        }

    </style>
</head>

<body>
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="card p-4 d-flex justify-content-center align-items-center">
            <h2 class="text-center mb-4">Inicio de Sesion</h2>
            <form asp-action="Login" asp-controller="Login" method="post">
                <div class="form-group mb-3">
                    <label for="username" >Nombre de Usuario:</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                        <input type="text" name="Username" class="form-control" placeholder="Username" required>
                        <span  class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label for="password">Contraseña:</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input type="password" name="Password" class="form-control" placeholder="Password" required>
                        <span  class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary w-100 mt-3 mb-5">Iniciar Sesion</button>
            </form>
        </div>
    </div>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var messageElement = document.getElementById("messageLogin");
            if (messageElement) {
                messageElement.style.display = 'block';
            }
        });

        setTimeout(function () {
            var messageElement = document.getElementById("messageLogin");
            if (messageElement) {
                messageElement.style.animation = 'slideOut 0.2s forwards';
                setTimeout(function () {
                    messageElement.style.display = 'none';
                }, 500);
            }
        }, 4000);
    </script>
</body>
</html>