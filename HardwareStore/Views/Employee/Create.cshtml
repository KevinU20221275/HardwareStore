﻿﻿
@model HardwareStore.Models.Employee

@{
    ViewData["Title"] = "Empleados";
    ViewData["TitlePage"] = "Agregar Empleado";
}

<section class="bg-white py-3 px-4 container rounded-2" style="max-width:800px;">
    <h4 class="pt-2">Ingrese los datos del Empleado</h4>
    <hr />
    <div class="row px-md-3">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label><b class="text-danger"> *</b>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label><b class="text-danger"> *</b>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Username" class="control-label"></label><b class="text-danger"> *</b>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger">@TempData["message"]</span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label><b class="text-danger"> *</b>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RePassword" class="control-label"></label><b class="text-danger"> *</b>
                    <input asp-for="RePassword" class="form-control" type="password" />
                    <span asp-validation-for="RePassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RoleId" class="control-label"></label>
                    <select asp-items="@ViewBag.Roles" asp-for="RoleId" class="form-select" id="roleSearch">
                        <option value="">Seleccione</option>
                    </select>
                    <span asp-validation-for="RoleId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label><b class="text-danger"> *</b>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label><b class="text-danger"> *</b>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Salary" class="control-label"></label><b class="text-danger"> *</b>
                    <input asp-for="Salary" class="form-control" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label><b class="text-danger"> *</b>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City" class="control-label"></label><b class="text-danger"> *</b>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Guardar <i class="lni lni-save"></i></button>
                    <a class="btn btn-primary" asp-action="Index">Volver a la lista <i class="lni lni-arrow-left"></i></a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $('#roleSearch').select2({
                width: '100%',
                placeholder: "Seleccione una Rol ",
            });
        });
    </script>
}