@model HardwareStore.Models.UpdatePassword

@{
    ViewData["Title"] = "Empleados";
    ViewData["TitlePage"] = "Actualizar Contraseña";
}

<section class="bg-white py-3 px-4 container rounded-2" style="max-width:800px;">
    <h4 class="pt-2">Datos del Empleado</h4>
    <hr />
    <div class="row px-md-3">
        <div class="col-md-12">
            <form asp-action="UpdatePassword">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label><b class="text-danger"> *</b>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RePassword" class="control-label"></label><b class="text-danger"> *</b>
                    <input asp-for="RePassword" class="form-control" type="password" />
                    <span asp-validation-for="RePassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-warning">Editar <i class="lni lni-pencil-alt"></i></button>
                    <a class="btn btn-primary" asp-action="Index">Volver a la lista <i class="lni lni-arrow-left"></i></a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

